<%- include('partials/header') %>
    <%- include('partials/nav') %>
        <div id="tyds">
            <div id="tyds-content">
                <div id="user-profile-grid" class="tyds-grid-item">
                    <img class="display-image" src="<%=user.profileImg%>" alt="user profile img">
                    <h2>
                        <%= user.fullname %>
                    </h2>
                </div>
                <div id="tyds-main-grid" class="tyds-grid-item scrollable">
                    <%if(tyds.length===0){ %>
                        <p>No tydes yet. Post one</p>
                        <%}%>

                            <% tyds.forEach((tyd)=>{%>
                                <% let tydOwner=users.find(user=>user.id===tyd.userId)%>
                                    <div class="single-tyd">
                                        <div class="upper">
                                            <img src="<%= tydOwner.profileImg %>" alt="<%= tydOwner.fullname%>">
                                            <p>
                                                <%= tyd.tyd %>
                                            </p>
                                        </div>

                                        <div class="lower">
                                            <p>
                                                <%= tyd.dateposted.toString().split(" ").slice(1, 5).join(" ")  %>
                                            </p>
                                            <div class=" likes-icon-count">
                                                    <div class="tyd-like-count">
                                                        <form action="/updatelikes?value=<%=tyd.likes%>&id=<%=tyd.id%>"
                                                            method="post">
                                                            <button class="tyd-like-count" type="submit">
                                                                <% if(liked){ %>
                                                                    <img class="tyd-like-icon"
                                                                        src="/images/icons/heart-fill.svg" alt="">
                                                                    <%}else{%>
                                                                        <img class="tyd-like-icon"
                                                                            src="/images/icons/heart.svg" alt="">
                                                                        <%}%>
                                                                            <p name="likesCounter">
                                                                                <%= tyd.likes %>
                                                                            </p>
                                                            </button>
                                                        </form>
                                                    </div>

                                        </div>
                                    </div>
                </div>
                <%})%>
            </div>
            <div id=" live-panel-grid" class="tyds-grid-item">
                <div id="active-users">
                    <h2>Active&nbsp;users</h2>
                    <div class="scrollable scrollable-side">
                        <% users.forEach(user=>{%>
                            <div class="active-user">
                                <img src="<%= user.profileImg%>" alt="<%= user.fullname %>">
                                <p>
                                    <%= user.fullname %>
                                </p>
                            </div>
                            <%})%>
                    </div>

                </div>
